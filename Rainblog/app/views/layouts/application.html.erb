<!DOCTYPE html>
<html>
<head>
	<title>Sonic Rainblog</title>
	<%= stylesheet_link_tag  "application",  :media => "all" %>
	<%= stylesheet_link_tag	 "bootstrap",    :media => "all" %>
  <style type="text/css">
    body {
      padding-top: 60px;
      padding-bottom: 40px;
    }
  </style>
  <%= stylesheet_link_tag "bootstrap-responsive", :media => "all" %>
  
  <%= favicon_link_tag %>

 	<%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container" style="position: relative; margin: 0 auto;">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <%= link_to 'Sonic Rainblog', root_path, :class => "brand" %>
          <div class="nav-collapse collapse">
            
              <% if current_user %>
                <ul class="nav">
                  <li><%= link_to 'My blog', posts_path %></li>
                  <li><%= link_to 'My profile', user_path(current_user) %></li>
                  <li><%= link_to 'New post', new_post_path %></li>
              <% end %>

            </ul>

            <!-- hax -->
            <span class="navbar-form pull-right">
              
              <!-- Logged in; display message and logout link -->
              <% if current_user %>
                <div style="display: inline; position: relative; top: 10px;">
                  <%= link_to 'Hello, ' << current_user.username << '!', user_path(current_user.id), style: 'color: orange; margin-top: 11px;' %>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  <%= link_to 'Log out', log_out_path, style: 'color: aqua;' %>
                </div>
              <!-- Not logged in; display login and register links -->
              <% else %>

                <%= form_tag sessions_path, style: 'display: inline;' do %>
                  <%= text_field_tag :username, nil, class: "span2", placeholder: "Username" %>
                  <%= password_field_tag :password, nil, class: "span2", placeholder: "Password" %>
                  <%= submit_tag "Log in", class: "btn" %>  
                <% end %>

                &nbsp;&nbsp;
                <%= link_to image_tag("fluttershy_yay_small.png", alt: "<Register>", title: "Register"), new_user_path, class: "fluttershy"%>

              <% end %>
            
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, id: "flash_#{name}" %>
      <% end %>

      <%= yield %>

      <hr />

      <footer>
        <p>&copy; Theneva 2013</p>
      </footer>

    </div> <!-- /container -->
  </body>
</html>
